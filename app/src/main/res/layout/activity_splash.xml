<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5099FF"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextTwister"
        android:fontFamily="cursive"
        android:textSize="45sp"
        android:textColor="#FFFFFF" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:src="@drawable/texttwist"
        android:textColor="#FFFFFF" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Try timing yourself!"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Test your anagram skills"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="#000000"/>

    <Button
        android:id="@+id/toIns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textSize="20sp"
        android:onClick="toIns"
        android:fontFamily="cursive"
        android:background="#FFFFFF"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Game example:"
        android:textSize="20sp"
        android:textColor="#FFFFFF"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/screenin"/>

</LinearLayout>